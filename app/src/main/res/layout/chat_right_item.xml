<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.example.jakera.smartchat.Views.BubbleTextView
        android:id="@+id/bubble_chat_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello BubbleTextVew"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/iv_chat_right_portrait"
        app:arrowWidth="8dp"
        app:angle="2dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="right"
        app:bubbleColor="#ff4444"
        />

    <ImageView
        android:id="@+id/iv_chat_right_portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/robot_portrait"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
